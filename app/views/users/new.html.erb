<body>
  <div class="jumbotron">
    <div class="container text-center">
      <h1>Sign Up</h1> 
      <div class="login-form">     
        <%= form_for @user do |f| %>
          <!--<% if @user.errors.any? %>
            <%= "Error in form" %>
