<h1>Sign Up</h1>
<br>
<br>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <%= "Error in form" %>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li> 
      <% end %>
    </ul>
  <% end %>

  <%= f.label :email %><br/>
  <%= f.text_field :email %><br/>
  <%= f.label :password %><br/>
  <%= f.password_field :password %><br/>
  <%= f.label :password_confirmation %><br/>
  <%= f.password_field :password_confirmation %><br/>
  <%= f.submit %>
<% end %>